@model IEnumerable<acadgest.Dto.Coordenation.CoordenationDto>

@{
    ViewData["Title"] = "Admin";
}


<div class="row">
    <a asp-controller="Account" asp-action="Index">Usuários</a>

    @foreach (var cord in Model)
    {
        <div class="card col-4 border border-primary">
            <div class="card-body">
                <h5 class="card-title">@cord.Name.ToUpper()</h5>

                <div class="d-flex justify-content-between">
                    <div>
                        <p class="card-text">@cord.CoordinatorName</p>
                    </div>
                    @if (cord.CoordinatorName == "Sem Coordenador")
                    {
                        <a asp-controller="Admin" asp-action="EditCoordinator" asp-route-id="@cord.Id"
                            class="btn btn-secondary">Set</a>
                    }
                    else
                    {

                        <a asp-controller="Admin" asp-action="EditCoordinator" asp-route-id="@cord.Id"
                            class="btn btn-warning">Edit</a>
                    }

                </div>

            </div>
            <div class="card-body d-flex justify-content-around">
                <form asp-controller="Coordenation" asp-action="Delete" asp-route-id="@cord.Id" method="post"
                    style="display:inline;">
                    <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Tem certeza que deseja excluir este usuário?');">Deletar</button>
                </form>
                <a asp-controller="Coordenation" asp-action="Edit" asp-route-id="@cord.Id"
                    class="btn btn-warning">Editar</a>
                <a asp-controller="Coordenation" asp-action="Index" asp-route-id="@cord.Id"
                    class="btn btn-primary">Acessar</a>
            </div>
        </div>

    }
    <div class="card col-4 d-flex justify-content-center align-items-center border border-primary">
        <a class="btn-primary rounded text-decoration-none" asp-controller="Admin" asp-action="NewCoordenation"
            role="button"><b class="fs-1">+</b></a>
    </div>


</div>