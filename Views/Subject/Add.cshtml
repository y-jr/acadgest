@model acadgest.Models.Subjects.Subject

<h2>Nova disciplina</h2>
<form asp-controller="Subject" asp-action="Create" method="post">
    <input type="hidden" asp-for="ClassId">
    <div class="row">
        <div class="form-group col-8">
            <label asp-for="Name">Nome da Cadeira</label>
            <input type="text" asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Grade">Classe</label>
            <select asp-for="Grade" class="form-control">
                <option value="Creche">Creche</option>
                <option value="Iniciação">Iniciação</option>
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@($"{i}ª")">@($"{i}ª")</option>
                }
            </select>
        </div>
    </div>
    <button type="submit" class="btn my-2 btn-primary">Cadastrar</button>
</form>
