@model IEnumerable<acadgest.Dto.Class.ClassDto>

@{
    ViewData["Title"] = "Diretor";
}


<div class="row p-4">

    @foreach (var turma in Model)
    {
        <div class="card col-12 col-md-6 col-xl-4 rounded-0 card-class">
            <div class="card-body">
                <h5 class="card-title">@turma.Name.ToUpper()</h5>

                <div class="d-flex justify-content-between">
                    <div>
                        <p class="card-text">Diretor Delete turma: <b> @turma.ClassDirectorName</b></p>
                    </div>
                </div>

            </div>
            <div class="card-body d-flex justify-content-around">
                <form asp-controller="Coordenation" asp-action="Delete" asp-route-id="@turma.Id" method="post"
                    style="display:inline;">
                </form>
                <a asp-controller="Coordenation" asp-action="Edit" asp-route-id="@turma.Id"
                    class="btn btn-warning">Editar</a>
                <form asp-controller="Class" asp-action="Index" asp-route-id="@turma.Id" method="get">
                    <input type="hidden"  name="trim" value="1">
                    <button class="btn btn-primary" type="submit">Pauta</button>
                </form>
            </div>
        </div>

    }


</div>