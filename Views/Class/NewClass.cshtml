@model acadgest.Dto.Class.ClassModelView
<h2>Nova turma</h2>

<form asp-action="Create" method="post">
    <input type="hidden" name="CoordenationId" asp-for="NewClass.CoordenationId" />
    <div class="row">
        <div class="form-gorup col-8">
            <label asp-for="NewClass.Name">Nome da turma</label>
            <input name="Name" asp-for="NewClass.Name" class="form-control" />
            <span asp-validation-for="NewClass.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-2">
            <label asp-for="NewClass.Classroom">Sala</label>
            <input name="Classroom" asp-for="NewClass.Classroom" class="form-control" />
            <span asp-validation-for="NewClass.Classroom" class="text-danger"></span>
        </div>
        <div class="form-group col-2">
            <label asp-for="NewClass.Grade">Classe</label>
            <select name="Grade" asp-for="NewClass.Grade" class="form-control">
                <option value="Creche">Creche</option>
                <option value="Iniciação">Iniciação</option>
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@($"{i}ª")">@($"{i}ª")</option>
                }
            </select>
            <span asp-validation-for="NewClass.Grade" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-6">
            <label asp-for="NewClass.Obs">Observações</label>
            <textarea name="Obs" asp-for="NewClass.Obs" class="form-control"
                placeholder="Observações sobre a turma"></textarea>
            <span asp-validation-for="NewClass.Obs" class="text-danger"></span>
        </div>
        <div class="form-group col-2">
            <label asp-for="NewClass.CourseId">Curso</label>
            <select name="CourseId" asp-for="NewClass.CourseId" class="form-control">
                @foreach (var course in Model.Courses)
                {
                    <option value="@course.Id">@course.Name</option>

                }
            </select>
            <span asp-validation-for="NewClass.CourseId" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="NewClass.ClassDirectorId">Diretor turma</label>
            <select name="ClassDirectorId" asp-for="NewClass.ClassDirectorId" class="form-control">
                @foreach (var user in Model.Users)
                {
                    <option value="@user.Id">@user.Name</option>
                }
            </select>
            <span asp-validation-for="NewClass.ClassDirectorId" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn my-2 btn-primary">Criar</button>
</form>
